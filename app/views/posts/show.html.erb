<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @post.summary %>
</p>

<p>
  <strong>Post url:</strong>
  <%= @post.post_url %>
</p>

<p>
  <strong> Subreddit:</strong>
  <%= @post.subreddit.name %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<% if current_user %>
<%= render :partial => 'comments/form', :locals => {:commentable_object => @post} %>
<% end %>

<%= render :partial => 'partials/comments', :collection => @post.comments %>
